<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC  
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"  
        "http://struts.apache.org/dtds/struts-2.0.dtd"> 

<struts>
	<include file="struts-default.xml"></include>
	<package name="default0" extends="struts-default">
		<!-- 与前面的form表单中的action命名一致 -->
		<action name="ActionUser" class="com.struts.cooper.action.ActionUser">
			<result name="success">/success.jsp</result>
			<result name="error">/fault.jsp</result>
			<result name="input">/index.jsp</result>
			<!-- 重定向跳转（不带值跳转）<result name="success" type="redirect">/success.jsp</result> -->
		</action>
		<action name="ActionUser1" class="com.struts.cooper.action.ActionUser1">
			<result name="success">/success1.jsp</result>
		</action>
	</package>
</struts>
     