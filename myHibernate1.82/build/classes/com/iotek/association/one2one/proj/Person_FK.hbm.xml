<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 <hibernate-mapping package="com.iotek.association.one2one.proj">
 	<class name="Person" table="T_PERSON_FK">
 		<id name="id" column="ID" type="java.lang.Long">
 			<generator class="sequence">
 				<param name="sequence">t_person_fk_seq</param>
 			</generator>
 		</id>
 		<property name="name" column="NAME" type="java.lang.String"></property>
 		<property name="gender" column="GENDER" type="java.lang.String"></property>
 		<property name="age" column="AGE" type="java.lang.Integer"></property>
 		<one-to-one name="passport" class="Passport" property-ref="person" cascade="all"></one-to-one>
 	</class>
 </hibernate-mapping>